<div class="profile">
  <h1>My Links</h1>
  <%= link_to "Home", root_path, class: "link-url" %>
  <% @links.each do |link| %>
    <div class="link-item profile-page-item">
      <div class="link-content">
      <p class="link-short"><%= link_to "#{link.url}", link.url %></p>
      <p class="link-short"><%= link_to "#{root_url}" + "#{link.link_id}", "#{root_url}" + "#{link.link_id}" %></p>
      </div>
    </div>
  <% end %>
</div>